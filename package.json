{
  "name": "my-nuxt-layer",
  "type": "module",
  "version": "0.0.1",
  "main": "./nuxt.config.ts",
  "scripts": {
    "postinstall": "pnpm --filter base run dev:prepare",
    "dev": "pnpm --filter website run dev",
    "slicemachine": "pnpm --filter website run slicemachine",
    "lint:fix": "pnpm --filter base run dev:prepare && pnpm --stream -r lint:fix"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  },
  "packageManager": "pnpm@9.10.0"
}