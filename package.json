{
  "name": "website",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "test": "vitest",
    "test:visual": "vitest run tests/visual-parity-runner.test.ts",
    "test:visual:serve": "npx serve tests/screenshots -p 8080",
    "test:content": "vitest run tests/content.test.ts",
    "test:semantic": "vitest run tests/semantic.test.ts",
    "test:interaction": "vitest run tests/interaction.test.ts",
    "build:studio": "NUXT_ENVIRONMENT=studio NITRO_PRESET=cloudflare-module nuxt build",
    "build:server": "NUXT_ENVIRONMENT=production NITRO_PRESET=cloudflare-module nuxt build",
    "generate": "NUXT_ENVIRONMENT=production nuxt generate",
    "deploy:studio": "pnpm build:studio && npx wrangler deploy",
    "deploy:server": "pnpm build:server && npx wrangler deploy -c wrangler.server.jsonc",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix  --cache",
    "prepare": "nuxt prepare",
    "typecheck": "nuxt typecheck"
  },
  "dependencies": {
