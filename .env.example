# Prismic CMS Configuration
# Required: Access token for Prismic CMS
PRISMIC_ACCESS_TOKEN=your_prismic_access_token_here

# Environment Configuration
# Optional: Deployment environment (local, production, github-pages, nuxthub-production, nuxthub-preview, internal-static, internal-static-drafts)
NUXT_ENVIRONMENT=local

# Nimiq Network Configuration
# Albatross node RPC URL for Albatross Liveview
NUXT_ALBATROSS_NODE_RPC_URL=

# API Configuration
# Optional: Main API endpoint domain
NUXT_PUBLIC_API_ENDPOINT=/ # For mainnet: https://api.nimiq.com

# Optional: Validators API endpoint for staking information
NUXT_PUBLIC_VALIDATORS_API=https://validators-api-mainnet.nuxt.dev

# Supabase Configuration
# Required for database functionality
NUXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NUXT_PUBLIC_SUPABASE_KEY=your_supabase_anon_key

# Words Challenge Configuration
# Optional: Configuration for the words challenge feature
NUXT_PUBLIC_WORDS_CHALLENGE_PUBLIC_ADDRESS=NQxx...
NUXT_PUBLIC_WORDS_CHALLENGE_FIRST_REAL_WORDS=word1,word2,word3

# Zoho CRM Integration (Optional)
# All Zoho variables are optional and only needed for CRM integration
NUXT_ZOHO_REQUEST_URL=https://accounts.zoho.com/oauth/v2/token
NUXT_ZOHO_CLIENT_ID=your_zoho_client_id
NUXT_ZOHO_CLIENT_SECRET=your_zoho_client_secret
NUXT_ZOHO_SCOPE=ZohoCRM.modules.ALL
NUXT_ZOHO_CODE=your_zoho_code
NUXT_ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
NUXT_ZOHO_LISTKEY=your_zoho_listkey

# Internal Preview Configuration
# Optional: Used for internal static preview builds
NIMIQ_STATIC_PREVIEW=
